{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "ESNext",
    "noEmit": false,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "_moduleAliases": {
    "@": "dist"
  }
}
